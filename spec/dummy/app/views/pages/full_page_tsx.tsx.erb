import { useState, useEffect } from 'react';

type Props = {
  page_title: string;
  initial_count: number;
  effect_label: string;
};

export default function FullPageTsx({ page_title, initial_count, effect_label }: Props) {
  const [count, setCount] = useState(initial_count);
  const [effectState, setEffectState] = useState(effect_label);

  useEffect(() => {
    setEffectState('hydrated');
  }, []);

  return (
    <main data-testid="full-page-tsx">
      <div className="card">
        <h1>{page_title}</h1>
        <p data-testid="page-count">Count: {count}</p>
        <p data-testid="page-effect-state">Effect: {effectState}</p>
        <div>
          <button data-testid="page-increment" onClick={() => setCount((value) => value + 1)}>
            Increment
          </button>
          <button data-testid="page-reset" onClick={() => setCount(initial_count)}>
            Reset
          </button>
        </div>
      </div>
    </main>
  );
}



